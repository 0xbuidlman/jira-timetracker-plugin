                              <div id="tabs-issue-content">
                                <table class="aui reporting-table">
                                    <thead>
                                        <tr>
                                            <th>Issue Key</th>
                                            <th>Issue Summary</th>
                                            <th>Type</th>
                                            <th>Priority</th>
                                            <th>Status</th>
                                            <th>Assignee</th>
                                            <th>Estimated</th>
                                            <th>Remaining</th>
                                            <th>Total Logged</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        #foreach ( $is in $issueSummaryReport.issueSummaries )
                                        <tr>
                                            <td>$is.issueKey</td>
                                            <td>$is.issueSummary</td>
                                            <td>$is.issueTypeName</td>
                                            <td>$is.priorityName</td>
                                            <td>$is.statusName</td>
                                            <td>#if ( !$is.assignee ) Unassigneed #else $is.assignee #end</td>
                                            <td>$durationFormatter.exactDuration($is.orginalEstimatedSum)</td>
                                            <td>$durationFormatter.exactDuration($is.reaminingTimeSum)</td>
                                            <td>$durationFormatter.exactDuration($is.workloggedTimeSum)</td>
                                        </tr>
                                        #end
                                    </tbody>
                                </table>
                                <div class="aui-group aui-group-split count-pagination">
                                    <div class="aui-item">
                                        <span class="results-count-text">
                                            <span class="results-count results-count-start">$issueSummaryReport.paging.start</span> â€“
                                            <span class="results-count results-count-end">$issueSummaryReport.paging.end</span> of 
                                            <span class="results-count results-count-total results-count-link">$issueSummaryReport.issueSummaryCount</span>
                                        </span>
                                    </div>
                                    <div class="aui-item">
                                        <div class="pagination">
                                            #if ( $issueSummaryReport.paging.maxPageNumber ) 
                                              #if ( $issueSummaryReport.paging.actPageNumber > 1 )
                                            <a href="javascript:void(0);" onclick="everit.reporting.main.getIssueSummaryPage((($issueSummaryReport.paging.actPageNumber - 1) * $filterCondition.limit) - $filterCondition.limit)">
                                                <span class="aui-icon aui-icon-small aui-iconfont-arrows-left"></span>
                                            </a>
                                              #end
                                              #if ( $issueSummaryReport.paging.actPageNumber < 3 )
                                                #foreach ( $page in [1..$issueSummaryReport.paging.maxPageNumber] ) 
                                                  #if ( $page < 6)
                                                    #if ( $issueSummaryReport.paging.actPageNumber == $page )
                                            <strong>$page</strong>
                                                    #else
                                            <a href="javascript:void(0);" onclick="everit.reporting.main.getIssueSummaryPage(($page * $filterCondition.limit) - $filterCondition.limit)">$page</a>
                                                    #end
                                                  #end
                                                #end
                                              #else
                                                #foreach ( $page in [1..$issueSummaryReport.paging.maxPageNumber] ) 
                                                  #if ( $issueSummaryReport.paging.actPageNumber + 3 > $page && $page > $issueSummaryReport.paging.actPageNumber - 3 )
                                                    #if ( $issueSummaryReport.paging.actPageNumber == $page )
                                            <strong>$page</strong>
                                                    #else
                                            <a href="javascript:void(0);" onclick="everit.reporting.main.getIssueSummaryPage(($page * $filterCondition.limit) - $filterCondition.limit)">$page</a>
                                                    #end
                                                  #end
                                                #end
                                              #end
                                              #if ( $issueSummaryReport.paging.actPageNumber < $issueSummaryReport.paging.maxPageNumber )
                                            <a href="javascript:void(0);" onclick="everit.reporting.main.getIssueSummaryPage((($issueSummaryReport.paging.actPageNumber + 1) * $filterCondition.limit) - $filterCondition.limit)">
                                                <span class="aui-icon aui-icon-small aui-iconfont-arrows-right"></span>
                                            </a>
                                              #end
                                            #end
                                        </div>
                                    </div>
                                </div>
                              </div>